<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0">
	<name>Form Builder</name>
	<author>Dan Rahmel</author>
	<version>1.0.0</version>
	<description>Setup and configuration for display of Form Builder component.</description>
	
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<files folder="site">
		<filename>index.html</filename>
		<filename>helloworld.php</filename>
	</files>
	<administration>
		 <menu>Form_Builder</menu>
		 <files folder="admin">
			<filename 
				component="formbuilder">formbuilder.php</filename>
			<filename>formbuilder.xml</filename>
			<folder>controllers</folder>
			<folder>tables</folder>
			<folder>views</folder>
		 </files>
	</administration>
</extension>
